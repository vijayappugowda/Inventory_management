<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.InventoryController">
    <top>
        <HBox spacing="10" padding="10">
            <TextField fx:id="barcodeInput" promptText="Scan or Enter Barcode"/>
            <Button text="Search" onAction="#searchProduct"/>
            <Button text="Export to CSV" onAction="#exportCSV"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn text="ID" fx:id="colId"/>
                <TableColumn text="Name" fx:id="colName"/>
                <TableColumn text="Category" fx:id="colCategory"/>
                <TableColumn text="Price" fx:id="colPrice"/>
                <TableColumn text="Quantity" fx:id="colQuantity"/>
                <TableColumn text="Barcode" fx:id="colBarcode"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
